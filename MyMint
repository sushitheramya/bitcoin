pragma solidity ^0.8.26;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract MyMint is ERC20 {
    uint256 public previousMintAmount;
    uint256 public maxTokenSupply = 1000000 * (10 ** decimals());

    constructor() ERC20("MINT", "MINT") {
        previousMintAmount = 10000 * (10 ** decimals()); // Initial mint amount
    }

    function mintFunction(uint256 dummyInput) public {
        uint256 mintAmount = previousMintAmount / 2;
        require(mintAmount > 1, "Mint amount too small");
        require(totalSupply() + mintAmount <= maxTokenSupply, "Exceeds max supply");

        _mint(msg.sender, mintAmount);
        previousMintAmount = mintAmount;
    }
}
